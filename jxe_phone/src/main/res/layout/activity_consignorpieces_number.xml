<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/menu_background">

    <include
        android:id="@+id/include"
        layout="@layout/base_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>


    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="起始日期:"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/query_consinor_startdate"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="25px"
                android:layout_weight="1.0"
                android:background="@drawable/edt_logininput_selector"
                android:ems="10"
                android:focusable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="结束日期:"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/query_consinor_enddate"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="25px"
                android:layout_weight="1.0"
                android:background="@drawable/edt_logininput_selector"
                android:ems="10"
                android:focusable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/query_btn"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/btn_selector"
                android:text="查询"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sendpieces_sign_table_height"
            android:orientation="horizontal">

            <View
                android:layout_width="1px"
                android:layout_height="@dimen/sendpieces_sign_table_height"
                android:background="#cccccc"/>

            <LinearLayout
                android:id="@+id/lin_header_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/sendpieces_sign_table_height"
                android:layout_weight="3"
                android:orientation="vertical">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#cccccc"/>

                <com.eruitong.view.SyncHorizontalScrollView
                    android:id="@+id/header_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sendpieces_sign_table_height"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/lin_year_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sendpieces_sign_table_height"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_txt_consignor_waybillnum_code"
                            android:layout_width="100dp"
                            android:layout_height="@dimen/sendpieces_sign_table_height"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="工号"/>

                        <View
                            android:layout_width="1px"
                            android:layout_height="@dimen/sendpieces_sign_table_height"
                            android:background="#cccccc"/>

                        <TextView
                            android:id="@+id/item_txt_consignor_waybillnum_piaonum"
                            android:layout_width="70dp"
                            android:layout_height="@dimen/sendpieces_sign_table_height"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="票数"/>

                        <View
                            android:layout_width="1px"
                            android:layout_height="@dimen/sendpieces_sign_table_height"
                            android:background="#cccccc"/>

                        <TextView
                            android:id="@+id/item_txt_consignor_waybillnum_quantitynum"
                            android:layout_width="150dp"
                            android:layout_height="@dimen/sendpieces_sign_table_height"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="件数"/>

                        <View
                            android:layout_width="1px"
                            android:layout_height="@dimen/sendpieces_sign_table_height"
                            android:background="#cccccc"/>

                        <TextView
                            android:id="@+id/item_txt_send_waybillnum_expressFee"
                            android:layout_width="150dp"
                            android:layout_height="@dimen/sendpieces_sign_table_height"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="运费"/>

                        <View
                            android:layout_width="1px"
                            android:layout_height="@dimen/sendpieces_sign_table_height"
                            android:background="#cccccc"/>
                    </LinearLayout>
                </com.eruitong.view.SyncHorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/lin_data_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.eruitong.view.SyncHorizontalScrollView
                    android:id="@+id/data_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <com.eruitong.view.NoscrollListView
                        android:id="@+id/query_sendpieces_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:scrollbars="none"/>
                </com.eruitong.view.SyncHorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>