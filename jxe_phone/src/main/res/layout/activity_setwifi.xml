<LinearLayout android:id="@+id/LinearLayout1"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.eruitong.activity.login.SetWifiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="打印机 IP:"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_wifi_ip1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:text="199"/>

        <EditText
            android:id="@+id/et_wifi_ip2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:text="9"/>

        <EditText
            android:id="@+id/et_wifi_ip3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:text="10"/>

        <EditText
            android:id="@+id/et_wifi_ip4"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:text="227"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="TCP端口号:"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_wifi_port"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:text="9100"/>

        <Button
            android:id="@+id/btn_wifi_connectandclose"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/wifi"
            android:text="连接"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="131dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/devices_shape"
                android:text="基本操作"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_wifi_U"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打印自检页"/>

            <Button
                android:id="@+id/btn_wifi_FM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打印机走纸"/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_wifi_MD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="校准纸张探测器"/>

        <Button
            android:id="@+id/btn_rfid_calibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RFID校准"/>
    </LinearLayout>


</LinearLayout>